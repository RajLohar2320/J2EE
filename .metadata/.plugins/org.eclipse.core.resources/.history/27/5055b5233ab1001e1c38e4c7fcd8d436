	public List<Employee> getAll() {
		List<Employee> elist = new ArrayList<Employee>();
		Session s1 = sf.openSession();
		Transaction tr = s1.beginTransaction();
		Query query=s1.createQuery("from Employee");
		elist = query.list();
		tr.commit();
		s1.close();
		return null;
	}

	public boolean save(Employee e) {
		Session s1 = sf.openSession();
		Transaction tr = s1.beginTransaction();
		s1.save(e);
		tr.commit();
		s1.close();
		return true;
	}

